           <div class="plus-icon">
                <h1>+</h1>   
           </div>
        </a>
    </div>
        <% if(slotstoday.length>0){
        slotstoday.forEach(function(slot){
            var slotbg="";
            if(slot.vacancies && slot.vacancies>=6){
                slotbg="slotgreen";
            }
            else if (slot.vacancies!=undefined && slot.vacancies>=3){
                slotbg="slotyellow";
            }
