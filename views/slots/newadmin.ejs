<% include ../partials/header.ejs %>
<h1 class="text-center">Please enter details for the new slot</h1>
<div class="card mx-auto w-25">
    <form method="POST" action="/slots">
    <ul class="list-group list-group-flush">
        <li class="list-group-item">
            <h5 class="card-title">Date</h5>
            <input type="date" id="dateinput" name="date">
        </li>
        
        <li class="list-group-item">
            <h5 class="card-title">Start Time</h5>
            <input type="time" id="starttime" name="starttime" min="7:00" max="21:00" value="18:30" required onchange=checkTime()>
        </li>
        <li class="list-group-item">
            <h5 class="card-title">End Time</h5>
            <input type="time" id="endtime" name="endtime" min="8:30" max="23:00" value="20:00" required onchange=checkTime()>
        </li>
  </ul>
    <button type="submit" class="mx-auto">Create</button>
    </form>
    
</div> 

<% include .././partials/footer.ejs %>